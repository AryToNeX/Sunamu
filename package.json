{
  "name": "sunamu",
  "description": "Beautiful app to show which music you are playing",
  "version": "1.2.0",
  "main": "dist/main/index.js",
  "license": "MPL-2.0",
  "author": {
    "email": "me@arytonex.pw",
    "name": "Naomi Calabretta",
    "url": "http://arytonex.pw"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AryToNeX/Sunamu.git"
  },
  "scripts": {
    "lint": "eslint src/ www/lib/ --ext .ts,.js",
    "compile": "tsc -b && cp -r src/www/{index.htm,assets} dist/www/",
    "clean": "rm -rf dist; rm -rf targets",
    "install-deps": "electron-builder install-app-deps",
    "test": "yarn compile && DEBUG=1 electron .",
    "run": "yarn compile && electron .",
    "build": "yarn compile && electron-builder",
    "build:dir": "yarn compile && electron-builder --dir",
    "release": "yarn clean && yarn compile && electron-builder --armv7l --arm64 --ia32 --x64; yarn install-deps"
  },
  "devDependencies": {
    "@types/discord-rpc": "^4.0.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "electron": "^15.3.1",
    "electron-builder": "^22.11.7",
    "eslint": "^7.18.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-window-state": "^5.0.3",
    "json5": "^2.2.0",
    "leveldown": "^6.1.0",
    "levelup": "^5.0.1",
    "mpris-for-dummies": "arytonex/mpris-for-dummies",
    "register-scheme": "https://github.com/NyaomiDEV/node-register-scheme",
    "yargs": "^17.2.1"
  }
}
